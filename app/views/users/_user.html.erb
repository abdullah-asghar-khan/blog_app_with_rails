<div class="user_card">
  <div class="user_img my_border">
    <img src="<%= user.photo %>" width="100" height="100" alt="Profile picture">
  </div>
  <div class="user_info my_border">
    <h2 class="user_name">
      <%= user.name %>
    </h2>      
    <p class="post_count">Number of posts: <%= user.posts_counter %></p>     
  </div>
</div>